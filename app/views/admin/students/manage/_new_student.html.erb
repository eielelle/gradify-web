<%= form_with(local: true, url: admin_students_manage_index_path, data: { btn_class: "btn-primary" }) do |form| %>
  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :name, class: "label-text" %>
    </div>
    <%= form.text_field :name, class: "input input-bordered w-full max-w-xs", name: "student_account[name]" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:name_error] %></span>
    </div>
  </label>

    <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :school_year, "School Year", class: "label-text" %>
    </div>
    <%= form.select :school_year, options_for_select(['2024-2025', '2023-2024', '2022-2023']), {}, class: "select select-bordered w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:school_year_error] %></span>
    </div>
  </label>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :section, "Section", class: "label-text" %>
    </div>
    <%= form.select :section, options_for_select(['Section A', 'Section B', 'Section C']), {}, class: "select select-bordered w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:section_error] %></span>
    </div>
  </label>
  
  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :email, class: "label-text" %>
    </div>
    <%= form.email_field :email, class: "input input-bordered w-full max-w-xs", name: "student_account[email]" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:email_error] %></span>
    </div>
  </label>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :password, class: "label-text" %>
    </div>
    <%= form.password_field :password, class: "input input-bordered w-full max-w-xs", name: "student_account[password]" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:password_error] %></span>
    </div>
  </label>

  <div>
    <%= form.submit "Add Student", class: "btn btn-primary mt-4", data: { 'turbo-confirm': 'Are you sure you want to add this new account?', btn_class: "btn-primary" } %>
  </div>
<% end %>
