<div id="list_students">
  <header class="flex justify-between items-center mb-6">
    <%= search_form_for @q, url: admin_classes_class_sy_students_manage_index_path, method: :get, html: { class: "join" } do |f| %>
      <%= f.search_field :name_or_email_cont, placeholder: "Search", class: "input input-bordered w-96 join-item", id: "search_input" %>
      <%= f.select :s, options_for_select(@sort_fields, selected: params.dig(:q, :s)), {}, { class: "select select-bordered join-item", onchange: 'this.form.submit();' } %>
      <button type="submit" class="btn btn-primary join-item">Search</button>
    <% end %>
  </header>
  <section>
    <div class="overflow-x-auto">
      <%= form_with url: admin_classes_class_sy_students_manage_index_path, method: :post do %>
        <!-- Dropdowns for selecting School Year and Section -->
        <div class="flex mb-4">
          <%= select_tag 'school_year_id', options_from_collection_for_select(@class.school_years, 'id', 'name'), include_blank: 'Select School Year', class: "select select-bordered mr-4", required: true %>
          <%= select_tag 'school_section_id', options_from_collection_for_select(@class.school_sections, 'id', 'name'), include_blank: 'Select School Section', class: "select select-bordered", required: true %>
        </div>

        <table class="table table-lg mb-6">
          <!-- head -->
          <thead>
            <tr>
              <th>
                <label>
                  <input type="checkbox" class="checkbox" id="select_all" />
                </label>
              </th>
              <th>Name</th>
              <th>Email</th>
              <th>Updated At</th>
            </tr>
          </thead>
          <tbody>
            <!-- row 1 -->
            <% if @users.present? %>
              <% @users.each do |student| %>
                <tr class="hover">
                  <th>
                    <label>
                      <%= check_box_tag 'student_ids[]', student.id, false, class: "checkbox" %>
                    </label>
                  </th>
                  <td>
                    <div class="flex items-center gap-3">
                      <span><%= student.name %></span>
                    </div>
                  </td>
                  <td>
                    <span><%= student.email %></span>
                  </td>
                  <td>
                    <span><%= student.updated_at %></span>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Submit Selected</button>
      <% end %>
      <div class="flex justify-between items-center">
        <span></span>
        <%= paginate @users, views_prefix: 'shared' %>
      </div>
    </div>
  </section>
</div>
<%= render "shared/toast", toast: flash[:toast] %>

<script>
  document.addEventListener('turbo:load', function () {
    const selectAllCheckbox = document.getElementById('select_all');
    const checkboxes = document.querySelectorAll('input[type="checkbox"].checkbox');

    selectAllCheckbox.addEventListener('change', function () {
      checkboxes.forEach(checkbox => {
        checkbox.checked = selectAllCheckbox.checked;
      });
    });
  });
</script>
