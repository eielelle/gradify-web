<div id="list_admins">
  <header class="flex justify-between items-center mb-6">
      <%= search_form_for @q, url: admin_classes_manage_index_path, method: :get, html: { class: "join" } do |f| %>
          <%= f.search_field :name_cont, placeholder: "Search", class: "input input-bordered w-96 join-item", id: "search_input" %>
          <%= f.select :s, options_for_select(@sort_fields, selected: params.dig(:q, :s)), {}, { class: "select select-bordered join-item", onchange: 'this.form.submit();' } %>
          <button type="submit" class="btn btn-primary join-item">Search</button>
          <%= link_to "Reset", admin_classes_manage_index_path, class: "btn btn-secondary join-item" %>
      <% end %>
    <div class="join">
      <%= link_to "Export", admin_admins_export_path, class: "btn btn-primary join-item" %>
    </div>
  </header>

  <section>
    <div class="overflow-x-auto">
      <table class="table table-sm mb-6">
        <!-- head -->
        <thead>
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- row 1 -->
          <% if @items.present? %>
            <% @items.each do | school_class | %>
              <tr class="hover">
                <td>
                  <div class="flex items-center gap-3">
                    <span><%= school_class.name %></span>
                  </div>
                </td>
                <td>
                  <span><%= format_date school_class.created_at %></span>
                </td>
                <td>
                  <span><%= format_date school_class.updated_at %></span>
                </td>

              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="flex justify-between items-center">
        <span><%= @count %> Classes</span>
        <%= paginate @items, views_prefix: 'shared' %>
      </div>
    </div>

  </section>
</div>

<%= render "shared/toast", toast: flash[:toast] %>