<% if flash[:notice] %>
  <p class="alert"><%= flash[:notice] %></p>
<% end %>

<%= form_with(model: @teacher, url: admin_teachers_manage_path(@teacher), method: :patch, local: true, data: { btn_class: "btn-primary" }) do |form| %>
  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :name, class: "label-text" %>
    </div>
    <%= form.text_field :name, class: "input input-bordered w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:name_error] %></span>
    </div>
  </label>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :email, class: "label-text" %>
    </div>
    <%= form.email_field :email, class: "input input-bordered w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:email_error] %></span>
    </div>
  </label>

  <div>
    <%= form.submit "Update Admin", class: "btn btn-primary mt-4", data: { 'turbo-confirm': 'Are you sure you want to save the changes to this account?' } %>
  </div>

<% end %>