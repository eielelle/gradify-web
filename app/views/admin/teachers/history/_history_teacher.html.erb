<div id="history">
    <header class="flex justify-between items-center mb-6">
      <%= search_form_for @q, url: admin_teachers_history_path, method: :get, html: { class: "join" } do |f| %>
          <%= f.search_field :item_type_or_event_or_whodunnit_cont, placeholder: "Search", class: "input input-bordered w-96 join-item", id: "search_input" %>
          <%= f.select :s, options_for_select(@sort_fields, selected: params.dig(:q, :s)), {}, { class: "select select-bordered join-item", onchange: 'this.form.submit();' } %>
          <button type="submit" class="btn btn-primary join-item">Search</button>
          <%= link_to "Reset", admin_teachers_history_path, class: "btn btn-secondary join-item" %>
      <% end %>
    </header>

    <section>
        <div class="overflow-x-auto">
            <table class="table table-sm mb-6 text-center">
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>Whodunnit</th>
                        <th>Last Snapshot</th>
                        <th>Event</th>
                        <th>Rollback</th>
                    </tr>
                </thead>
                <tbody>
                    <% @items.each do |version| %>
                    <tr class="hover">
                        <td><%= format_date version.created_at %></td>
                        <td>
                            <%= version.whodunnit %>
                            <br>
                            <% if current_admin_account.name == version.whodunnit %>
                                <span class="badge badge-ghost badge-sm">Current</span>
                            <% end %>
                        </td>
                        <td><%= link_to "#{version.item_type} ID: #{version.id}", admin_teachers_snapshot_path(id: version.id), class: "link link-primary" %></td>
                        <td><%= version.event %></td>
                        <td>
                            <%= link_to 'View Previous Version', admin_teachers_versions_path(id: version.item_id), class: "link link-primary" %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

            <div class="flex justify-between items-center">
                <span><%= @count %> Versions</span>
                <%= paginate @items, views_prefix: 'shared' %>
            </div>
        </div>
    </section>
</div>