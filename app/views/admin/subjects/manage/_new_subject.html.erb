<%= form_with(model: [:admin, :subjects, Subject.new], local: true, url: admin_subjects_manage_index_path, method: :post) do |form| %>
  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :school_class_id, 'Strand', class: "label-text" %>
    </div>
    <%= form.select :school_class_id, options_from_collection_for_select(@school_classes, :id, :name), { prompt: "Select a Strand" }, { class: "select select-bordered w-full max-w-xs" } %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:school_class_error] %></span>
    </div>
  </label>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :name, class: "label-text" %>
    </div>
    <%= form.text_field :name, placeholder: "This field is required.", class: "input input-bordered w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:name_error] %></span>
    </div>
  </label>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <%= form.label :description, class: "label-text" %>
    </div>
    <%= form.text_area :description, maxlength: 100, class: "textarea textarea-bordered textarea-lg w-full max-w-xs" %>
    <div class="label">
      <span class="label-text-alt text-error"><%= flash[:description_error] %></span>
    </div>
  </label>

  <div>
    <%= form.submit "Add Subject", class: "btn btn-primary mt-4", data: { 'turbo-confirm': 'Are you sure you want to add this new subject?', btn_class: "btn-primary" } %>
  </div>
<% end %>