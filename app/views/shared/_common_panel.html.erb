<% show_border = true if show_border.nil? %>
<% url_path = nil if url_path.nil? %>

<section class="p-6">
  <p><%= subtitle %></p>
  <h1 class="text-3xl font-bold mb-6"><%= title %></h1>
  <%= yield %>
  <div class="<%= border_class(show_border) %> bg-base-100 border-base-300 rounded-b-lg p-6"><%= render "#{content}", url_path: url_path %></div>
</section>