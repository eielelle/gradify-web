<%= render "shared/toast", toast: flash[:toast] %>

<h2 class="text-2xl font-semibold mb-4">Basic Information</h2>

<div>
    <strong>Name: </strong>
    <span><%= @teacher.name %></span>
</div>
<div>
    <strong>Email: </strong>
    <span><%= @teacher.email %></span>
</div>

<br>

<h2 class="text-2xl font-semibold mb-4">Authentication Information</h2>

<div>
    <strong>Sign In Count: </strong>
    <span><%= @teacher.sign_in_count %></span>
</div>
<div>
    <strong>Current Sign In At: </strong>
    <span><%= format_date @teacher.current_sign_in_at %></span>
</div>
<div>
    <strong>Last Sign In At: </strong>
    <span><%= format_date @teacher.last_sign_in_at %></span>
</div>
<div>
    <strong>Current IP: </strong>
    <span><%= @teacher.current_sign_in_ip %></span>
</div>
