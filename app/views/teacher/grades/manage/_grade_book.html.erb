<div id="grade_book">
  <header class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <%= search_form_for @q, url: teacher_grades_manage_index_path, method: :get, html: { class: "join w-full md:w-auto flex flex-col md:flex-row justify-between gap-4 md:gap-0" } do |f| %>
      <div class="flex flex-col md:flex-row gap-2 w-full md:w-auto">
        <%= f.search_field :name_or_email_cont, placeholder: "Search Student Name or Email", class: "input input-bordered w-full md:w-96 join-item mb-2 md:mb-0", id: "search_input" %>
        <%= f.select :s, options_for_select(@sort_fields, selected: params.dig(:q, :s)), {}, { class: "select select-bordered w-full md:w-auto mb-2 md:mb-0", onchange: 'this.form.submit();' } %>
      </div>
      <div class="flex flex-row gap-2 w-full md:w-auto">
        <div class="flex flex-row gap-2">
          <button type="submit" class="btn btn-primary">Search</button>
          <%= link_to "Export", teacher_grades_export_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </header>

  <% if @students.any? %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Section</th>
            <th>Subject</th>
            <% @exams.each do |exam| %>
              <th><%= exam.name %></th>
            <% end %>
            <th>Average</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |student| %>
            <% student.subjects.each do |subject| %>
              <tr class="hover">
                <td><%= student.name %></td>
                <td>
                  <%= student.school_sections.map { |section| 
                    section.school_year.school_class.name 
                  }.uniq.join(", ") %>
                </td>
                <td><%= student.school_sections.map(&:name).join(", ") %></td>
                <td><%= subject.name %></td>
                <% @exams.where(subject: subject).each do |exam| %>
                  <td>
                    <div class="p-2">
                      <div class="font-medium">Total: 0</div>
                      <div class="text-xs text-gray-500">
                        Correct: 0 | Incorrect: 0
                      </div>
                    </div>
                  </td>
                <% end %>
                <td>
                  <div class="p-2">0</div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-center gap-2 mt-4">
      <span><%= @count %> students</span>
      <%= paginate @items, views_prefix: 'shared' %>
    </div>
  <% else %>
    <p class="text-center py-4 text-gray-500">
      No students found matching your search criteria.
    </p>
  <% end %>
</div>